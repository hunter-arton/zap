{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zap",
  "version": "1.0.0",
  "identifier": "com.devtool.zap",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zap",
        "label": "main",
        "width": 500,
        "height": 1000,
        "minWidth": 350,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "dragDropEnabled": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}